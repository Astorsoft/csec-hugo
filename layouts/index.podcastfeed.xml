{{chomp "<?xml version=\"1.0\" encoding=\"UTF-8\"?>\n"}}
<rss version="2.0"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:content="http://purl.org/rss/1.0/modules/content/"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:googleplay="http://www.google.com/schemas/play-podcasts/1.0/play-podcasts.xsd"
    xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd"
    xmlns:rawvoice="http://www.rawvoice.com/rawvoiceRssModule/"
    xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
    xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
    xmlns:wfw="http://wellformedweb.org/CommentAPI/"
    xmlns:webfeeds="http://webfeeds.org/rss/1.0">
    <channel>
        <atom:link href="{{ .Site.BaseURL }}/feed/podcast.xml" rel="self" type="application/rss+xml" />
        <link>{{ .Site.BaseURL }}</link>
        <language>fr</language>
        <managingEditor>{{ .Site.Params.Contact | safeHTML }} ({{ .Site.Params.Author | safeHTML }})</managingEditor>
        <webMaster>{{ .Site.Params.Contact | safeHTML }} ({{ .Site.Params.Author | safeHTML }})</webMaster>
        <copyright>{{ .Site.Copyright | safeHTML }}</copyright>
        <pubDate>{{ dateFormat "Mon, 2 Jan 2006 15:04:05 -0700" .Site.LastChange | safeHTML }}</pubDate>
        <lastBuildDate>{{ dateFormat "Mon, 2 Jan 2006 15:04:05 -0700" .Site.LastChange | safeHTML }}</lastBuildDate>
        <itunes:author>{{ .Site.Params.Author | safeHTML }}</itunes:author>
        <title>{{ .Site.Title | safeHTML }} - Podcasts</title>
        <webfeeds:cover image="{{ .Site.BaseURL }}/images/hero-blue.jpg" />
        <webfeeds:icon>{{ .Site.BaseURL }}/images/icon/android-icon-192x192.png</webfeeds:icon>
        <webfeeds:accentColor>3498DB</webfeeds:accentColor>
        <webfeeds:logo>{{ .Site.BaseURL }}/images/logo.big.jpg</webfeeds:logo>
        <webfeeds:analytics id="{{ .Site.Params.GoogleAnalyticsID }}" engine="GoogleAnalytics"/>
        <itunes:subtitle>
            {{ .Site.Params.shortDesc | safeHTML }}
        </itunes:subtitle>
        <description>
            {{ .Site.Params.shortDesc | safeHTML }}
        </description>
        <image>
            <title>{{ .Site.Title | safeHTML }} - Podcasts</title>
            <url>{{ .Site.BaseURL }}/images/logo.big.jpg</url>
            <link>{{ .Site.BaseURL }}</link>
        </image>
        <itunes:summary>
            {{ .Site.Params.longDesc | safeHTML }}
        </itunes:summary>
        <itunes:keywords>Cybersécurité, SSI, Vie privée, Infosec, Sécurité, Continuité, SECHebdo, SECompris, SEClair, PoC, Point Sécu, Comptoir</itunes:keywords>
        <itunes:owner>
            <itunes:name>{{ .Site.Params.Author | safeHTML}}</itunes:name>
            <itunes:email>{{ .Site.Params.Contact | safeHTML}}</itunes:email>
        </itunes:owner>
        <itunes:image href="{{ .Site.BaseURL }}/images/logo.big.jpg" />
        <itunes:category text="Technology">
            <itunes:category text="Tech News" />
        </itunes:category>
        <rawvoice:frequency>Mensuel</rawvoice:frequency>
        <rawvoice:subscribe
            feed="{{ .Site.BaseURL }}/feed/podcast.xml"
            itunes="https://itunes.apple.com/fr/podcast/id691497996"></rawvoice:subscribe>
        <sy:updatePeriod>hourly</sy:updatePeriod>
        <sy:updateFrequency>1</sy:updateFrequency>
        <generator>Hugo -- gohugo.io</generator>
        <itunes:explicit>no</itunes:explicit>
        {{ range first 30 .Site.Taxonomies.categories.podcast.Pages }}
        {{ $img := or .Params.image "/images/covers/default.jpg" }}
        <item>
          <title>
            {{ .Title }}{{ if eq .Section "sechebdo" }} - {{ .Params.Subheadline }}{{end}}
          </title>
            <link>{{ .Permalink }}</link>
            <pubDate>{{ dateFormat "Mon, 2 Jan 2006 15:04:05 -0700" .Date | safeHTML }}</pubDate>
            <guid>{{ .Permalink }}</guid>
            <description>
              {{ .Summary | plainify | htmlUnescape | safeHTML }}
            </description>
            <content:encoded>{{ chomp "<![CDATA[\n" }}<img src="{{ $.Site.BaseURL }}{{ $img }}" class="webfeedsFeaturedVisual" /><br />{{ .Content | htmlUnescape | safeHTML }}{{chomp "]]>\n"}}</content:encoded>
            <enclosure url="{{ .Params.podcast.feed }}" type="audio/mpeg"/>
            <itunes:author>{{ $.Site.Params.Author | safeHTML }}</itunes:author>
            <itunes:explicit>No</itunes:explicit>
            {{ with .Params.Subheadline }}<itunes:subtitle>{{ . }}</itunes:subtitle>{{ end }}
            <itunes:summary>
                {{ .Summary | plainify | htmlUnescape | safeHTML }}
            </itunes:summary>
            <!--<itunes:duration>{{ .Params.podcast.feed }}</itunes:duration>-->
            <itunes:keywords>{{ delimit .Params.tags ", " | safeHTML }}</itunes:keywords>

            <itunes:image href="{{ $.Site.BaseURL }}{{ $img }}" />
            <category>{{ .Section | safeHTML }}</category>
        </item>
        {{ end }}
    </channel>
</rss>
